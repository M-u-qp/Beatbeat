<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/mini_state">
        <Constraint
            android:id="@id/mini_player_container"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="visible" />

        <Constraint
            android:id="@id/full_player_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/full_state">
        <Constraint
            android:id="@id/mini_player_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Constraint
            android:id="@id/full_player_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@id/full_state"
        motion:constraintSetStart="@id/mini_state"
        motion:duration="500"
        motion:motionInterpolator="fastOutSlowIn">

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                android:scaleX="0.9"
                android:scaleY="0.9"
                motion:framePosition="50"
                motion:motionTarget="@id/mini_player_container" />

            <KeyAttribute
                android:alpha="0.5"
                android:scaleX="0.9"
                android:scaleY="0.9"
                motion:framePosition="50"
                motion:motionTarget="@id/full_player_container" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/mini_state"
        motion:constraintSetStart="@id/full_state"
        motion:duration="400"
        motion:motionInterpolator="fastOutSlowIn">

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                android:scaleX="0.95"
                android:scaleY="0.95"
                motion:framePosition="50"
                motion:motionTarget="@id/mini_player_container" />
        </KeyFrameSet>
    </Transition>
</MotionScene>